{ "name": "Lintu",
  "private": true,
  "description": "Личный проект",
  "devDependencies": {
    "editorconfig-cli": "1.0.0",
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "gulp-autoprefixer": "10.2.5",
    "gulp-browser-sync": "2.26.14",
    "gulp": "4.0.2",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-sass": "4.1.0",
    "gulp-sourcemaps": "3.0.0",
    "postcss": "8.2.8",
    "stylelint": "13.12.0"
  },
   "scripts": {
    "editorconfig": "editorconfig-cli",
    "test": "npm run editorconfig && npm run stylelint",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "start": "gulp",
    "build": "gulp styles"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "14.15.0"
  }
}